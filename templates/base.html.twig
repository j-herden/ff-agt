<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="icon" href="{{ asset('img/favicon.svg') }}" type="image/svg+xml" >
        <title>{% block title %}Feuerwehren Bad Zwesten / Atemschutz{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('css/app.css') }}">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
        <script src="https://kit.fontawesome.com/3d8281fe7f.js" crossorigin="anonymous"></script>
        {% block stylesheets %}

        {% endblock %}
    </head>
    <body>
    <div class="container" id="page">
        <h1>
            <img src="{{ asset('img/favicon.svg') }}" class="header" />
            Feuerwehren Bad Zwesten
        </h1>
        {% if app.user %}
            <div class="dropdown aktivUser mb-1">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    {{ app.user.name|e }}
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="{{ path('profile') }}">Profil</a>
                    <a class="dropdown-item" href="{{ path('app_logout') }}">Logout</a>
                </div>
            </div>
        {% endif %}
        {# read and display just one flash message type #}
        {% for message in app.flashes('notice') %}
            <div class="alert alert-primary">
                {{ message }}
            </div>
        {% endfor %}

        {# read and display just one flash message type #}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {# read and display just one flash message type #}
        {% for message in app.flashes('warning') %}
            <div class="alert alert-warning">
                {{ message }}
            </div>
        {% endfor %}


        {% block body %}  {% endblock %}

        {% block footer %}
        {% if app.user %}
            <div class="footer mb-2">
                <a href="{{ path('dashboard') }}">Dashboard</a>
                 -
                <a href="{{ path('about_page') }}">About</a>
                 -
                <a href="{{ path('impressum') }}">Impressum</a>
                 -
                <a href="{{ path('easyadmin') }}">Admin</a>
            </div>
        {% endif %}
        {% endblock %}

        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
        {% endblock %}
    </div>
    </body>
</html>
